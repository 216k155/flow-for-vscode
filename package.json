{
  "name": "flow-for-vscode",
  "version": "0.2.0",
  "publisher": "flowtype",
  "description": "Flow support for VS Code",
  "displayName": "Flow Language Support",
  "engines": {
    "vscode": "1.3.x"
  },
  "categories": [
    "Languages",
    "Linters"
  ],
  "private": true,
  "activationEvents": [
    "onLanguage:javascriptreact",
    "onLanguage:javascript"
  ],
  "main": "./build/flowMain",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Flow Configurations",
      "properties": {
        "flow.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Is flow enabled"
        },
        "flow.pathToFlow": {
          "type": "string",
          "default": "flow",
          "description": "Path to flow binary"
        },
        "flow.stopFlowOnExit": {
          "type": "boolean",
          "default": true,
          "description": "Stop Flow on Exit"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "./compile.sh",
    "compile": "./compile.sh --watch"
  },
  "dependencies": {
    "dequeue": "^1.0.5",
    "event-kit": "^2.0.0",
    "fs-plus": "^2.8.2",
    "fuzzaldrin": "^2.1.0",
    "log4js": "^0.6.37",
    "regenerator-runtime": "^0.9.5",
    "rxjs": "^5.0.0-beta.8",
    "shell-quote": "^1.6.0",
    "temp": "^0.8.3"
  },
  "devDependencies": {
    "vscode": "0.11.x",
    "babel-cli": "^6.1.4",
    "babel-plugin-transform-flow-strip-types": "^6.0.14",
    "babel-preset-es2015": "^6.1.4",
    "babel-preset-stage-1": "^6.1.2"
  },
  "icon": "flow-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/flowtype/flow-for-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/flowtype/flow-for-vscode/issues"
  }
}
